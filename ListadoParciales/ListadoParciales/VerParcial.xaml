<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListadoParciales.VerParcial">

	<StackLayout>
		<Label Text="Parcial: " />

		<Label Text="{Binding materia}" />
		<Label Text="{Binding temas}" />
		<Label Text="{Binding fecha}" />
		<Label Text="{Binding profesor.nombre}" />
		<Label Text="{Binding profesor.email}" />
		<Button Clicked="btn_editar_parcial" x:Name="btnEditarEmail" Text="Editar"></Button>
		<Button Clicked="btn_email_profesor" x:Name="btnEnviarEmail" Text="Email al Profesor"></Button>
		<Button Clicked="btn_eliminar_parcial" x:Name="btnEliminarParcial" Text="Eliminar"></Button>
	</StackLayout>
</ContentPage>